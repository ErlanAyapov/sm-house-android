<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="5dp"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:padding="8dp"
            android:paddingTop="16dp"
            android:text="Нәтижесі..."
            android:textColor="#04B0FF" />

        <EditText
            android:id="@+id/editTextCommand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#80FFFFFF"
            android:hint="Мында жаз"
            android:padding="5dp"
            android:textColor="#04B0FF" />

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#04B0FF"
            android:text="жіберу"
            android:textColor="#B3E5FC" />

        <Button
            android:id="@+id/buttonVoiceInput"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#04B0FF"
            android:text="дыбыс пен жазу"
            android:textColor="#B3E5FC" />

    </LinearLayout>

</RelativeLayout>
